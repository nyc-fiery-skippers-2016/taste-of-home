
<h1 class="large-12"> <%=@store.name%> <h1>
<div class="medium-12">
  <p><%=@store.description%></p>
</div>
<div class="medium-6"><%=@store.phone%></div>


<section id="comment">
  <%= render template: '/comments/index', locals: { comment: @comment } %>
</section>

<div id="form"></div>

<ul>
  <% @store.tags.each do |tag|%>
    <li><a href="/tags/<%= tag.id%>"><%= tag.name%></a></li>
  <% end%>
</ul>

<% if logged_in? %>

  <%=render partial: "tags/tag", locals: {store_tag: @store_tag, store: @store}%>

  <%= form_tag(store_lists_path) do %>
    <%= hidden_field_tag("store_list[store_id]", @store.id) %>
    <%= collection_select(:store_list,:list_id, current_user.lists, :id, :name) %>

    <div class="actions">
      <%= submit_tag "Add this business to your list"%>
    </div>
  <% end %>

  <%if logged_in?%>
    <%if StoreUser.where(store_id: @store.id, user_id: current_user.id).empty?%>
      <form action="/storeusers/create/<%=@store.yelp_id%>">
        <input type="image" src="data:image/png;base64," alt="Add this business to your favorites" />
      </form>
    <%else%>
      <p>This place is on your favorites</p>
    <%end%>
  <%end%>
<% end %>

</div>
