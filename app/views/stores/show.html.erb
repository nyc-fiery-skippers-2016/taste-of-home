
<h1 class="name-header text-center"> <%=@store.name%> <h1>

<div class="favorite">
  <%if logged_in?%>
    <%if StoreUser.where(store_id: @store.id, user_id: current_user.id).empty?%>
      <form action="/storeusers/create/<%=@store.yelp_id%>">
        <input type="image" src="data:image/png;base64," alt="Add this business to your favorites" />
      </form>
    <%else%>
      <p>This place is on your favorites</p>
    <%end%>
  <%end%>
</div>

  <div class="medium-6"><h5 class="store-details"><img src="<%=@store.img_url%>" style="200px" width="200px"></h5></div>
  <div class="medium-6"><h5 class="store-details"><%=@store.phone%></h5></div>
  <div class="medium-6"><h5 class="store-details"><%=@store.address%></h5></div>
<div class="medium-12">
  <p><h5 class="store-details"><%=@store.description%></h5></p>
</div>
<div class="medium-6"><%=@store.neighborhoods%></div>

<section id="comment">
  <h4><%= render template: '/comments/index', locals: { comment: @comment } %></h4>
</section>

<div id="form"></div>

<ul>
  <% @store.tags.each do |tag|%>
    <li><a href="/tags/<%= tag.id%>"><%= tag.name%></a></li>
  <% end%>
</ul>

<% if logged_in? %>

  <%=render partial: "tags/tag", locals: {store_tag: @store_tag, store: @store}%>

  <%= form_tag(store_lists_path) do %>
    <%= hidden_field_tag("store_list[store_id]", @store.id) %>
    <%= collection_select(:store_list,:list_id, current_user.lists, :id, :name) %>

    <div class="actions">
      <%= submit_tag "Add this business to your list"%>
    </div>
  <% end %>
<% end %>
