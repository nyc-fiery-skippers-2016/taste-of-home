<div class="container">
  <div class="row text-center">
      <div class="large-12">
        <h1><%=@store.name.titleize%></h1> 
    <!-- title -->
        <%if logged_in? && StoreUser.where(store_id: @store.id, user_id: current_user.id).empty?%>
          <form action="/storeusers/create/<%=@store.yelp_id%>">
            <input type="image" src="data:image/png;base64," alt="Add This Business to your Favorites" />
          </form>
        <%else%>
          <p><%= @store.name.titleize%> is a favorite!</p>
        <%end%>
      </div>
  </div>
  <div class="row">
    <div class="large-6 columns text-center">
      <!-- picture -->
      <img class="store-details" src="<%=@store.img_url%>" height="200px">
    </div>
    <div class="large-6 columns">
      <!-- words -->
      <h5 class="store-details"><%=@store.phone%></h5>
      <p class="store-details"><strong><%=@store.address%></strong> </p>
      <h5 class="store-details">Categories:<p><%=@store.description.chomp.split(",").uniq.join(",")%></h5></p>
    </div>
  </div>
  <div class="row">
    <div class="large-6 columns">
      <h4><%= render template: '/comments/index', locals: { comment: @comment } %></h4>
    </div>
    <div class="large-6 columns">
      <br><br>
      <h5>Tags:</h5>
      <ul id="tags">
        <% @store.tags.each do |tag|%>
          <li><a href="/tags/<%= tag.id%>">#<%= tag.name%></a></li>
        <%end%>
      </ul>
    </div>
  </div>
  <% if logged_in? %>
    <div class="row">
      <div class="large-6 columns text-center">
        <%= form_tag(store_lists_path) do %>
        <%= hidden_field_tag("store_list[store_id]", @store.id) %>
        <%= collection_select(:store_list,:list_id, current_user.lists, :id, :name) %>
        <% end %>
        <div class="actions">
          <%= submit_tag "Add #{@store.name.titleize} to your List",  class: "button radius"%>
        </div>
      </div>
        <div class="large-6 columns text-center">
         <%=render partial: "tags/tag", locals: {store_tag: @store_tag, store: @store}%>
        </div>
    </div>
  <% end %>
</div>
